public class Main 
{
    public static void main(String[] args)
    {
        String input = " I am a programmer";
        char s= 'p';
        int b=input.length();
        for (int i = 0; i < b; i++) 
        {
            if (input.charAt(i) == s) 
            {
               System.out.println(s+ " is found in string at "+i);
                break;
            }
        }
    }
}
